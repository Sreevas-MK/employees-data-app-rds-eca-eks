apiVersion: v1
kind: Secret
metadata:
  name: flask-app-static-secret
  namespace: {{ .Values.global.namespace }}
type: Opaque
stringData:
  DATABASE_HOST: {{ .Values.flask.secrets.DB_HOST | quote }}
  DATABASE_PORT: "3306"
  DATABASE_NAME: company
  DATABASE_SSL: "true"
  REDIS_HOST: {{ .Values.flask.secrets.REDIS_HOST | quote }}
  REDIS_PORT: "6379"
  REDIS_SSL: "true"

